<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="PrimaryColor">#FF2D2D30</Color>
    <Color x:Key="SecondaryColor">#FF007ACC</Color>
    <Color x:Key="AccentColor">#FF3F3F46</Color>
    <Color x:Key="TextColor">#FFFFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="ButtonHoverBrush" Color="#FF1E1E1E" />
</ResourceDictionary>