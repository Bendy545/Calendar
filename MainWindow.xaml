<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar.Scripts"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="850">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Calendar Grid.Column="0" SelectedDate="{Binding SelectedDate}" Margin="0,0,10,0" />

        <StackPanel Grid.Column="1">
            <TextBlock Text="Fotbalové události:" FontWeight="Bold" Margin="0,0,0,10" />

            <ListView ItemsSource="{Binding Events}" Height="300">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Datum" DisplayMemberBinding="{Binding Date}" Width="100"/>
                        <GridViewColumn Header="Název" DisplayMemberBinding="{Binding Title}" Width="200"/>
                        <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding Tag}" Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Přidat zápas" Command="{Binding AddEventCommand}" Width="150" HorizontalAlignment="Right" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>
